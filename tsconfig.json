{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es2020",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "downlevelIteration": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
