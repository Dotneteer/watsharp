{
  "name": "@dotneteer/watsharp-public-dts-bundle-webpack-plugin",
  "version": "0.1.0",
  "description": "A webpack plugin for creating a .d.ts bundle which contains only the top level exported and public members of a project",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "scripts": {
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "clean": "rimraf dist/",
    "test": "ts-mocha -p ./test/tsconfig.json ./test/**/*.test.ts",
    "lint": "eslint . --ext .js,.ts"
  },
  "author": "Istvan Novak",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Dotneteer/watsharp/issues"
  },
  "homepage": "https://github.com/Dotneteer/watsharp#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dotneteer/watsharp.git"
  },
  "dependencies": {
    "@babel/generator": "^7.10.0",
    "@babel/parser": "^7.10.0",
    "dts-bundle-generator": "^4.2.0"
  },
  "devDependencies": {
    "@babel/types": "^7.10.0",
    "@types/webpack": "^4.32.2",
    "rimraf": "^2.6.3",
    "typescript": "^4.2.2"
  }
}
