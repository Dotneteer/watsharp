{
  "name": "@dotneteer/watsharp-core",
  "version": "0.1.1",
  "description": "WAT# compiler core package",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && webpack && npm run clean:dts",
    "build:prod": "npm run build -- --mode=production --devtool=\"(none)\"",
    "clean": "rimraf ./index.*",
    "clean:dts": "rimraf ./src/**/*.d.ts",
    "test": "ts-mocha -p ./tsconfig.json ./test/**/*.test.ts",
    "pack": "npm pack",
    "link": "npm link --only=production",
    "try": "wat2wasm ./test/_z80Sample/z80_build.wat -o ./test/_z80Sample/z80.wasm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dotneteer/watson.git"
  },
  "keywords": [
    "WebAssembly",
    "WATson",
    "watson",
    "Watson",
    "Watson transpiler"
  ],
  "author": "Istvan Novak",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Dotneteer/watson/issues"
  },
  "homepage": "https://github.com/Dotneteer/watson#readme",
  "devDependencies": {
    "@dotneteer/watsharp-public-dts-bundle-webpack-plugin": "^0.1.1",
    "@types/expect": "^24.3.0",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.20",
    "expect": "^26.6.2",
    "mocha": "^8.2.1",
    "rimraf": "^3.0.2",
    "ts-loader": "^8.0.17",
    "ts-mocha": "^8.0.0",
    "typescript": "^4.1.3",
    "wat2wasm": "^3.0.0",
    "webpack": "^5.24.3",
    "webpack-cli": "^4.5.0"
  }
}
